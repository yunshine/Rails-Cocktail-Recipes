  <h4 class="yellow-font bold-font text-center ">Add an Ingredient</h4>

  <%= simple_form_for [cocktail, dose] do |f| %>
    <%= f.association :ingredient, input_html: { class: "beautiful-dropdown, select2" }, include_hidden: false, collection: Ingredient.order('name ASC') %>
    <%= f.input :description, class: "label", label: "How much?" %>
    <%= f.button :submit, class: 'btn btn-cocktail' %>
  <% end %>
