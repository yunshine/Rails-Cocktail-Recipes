<h1>Form to create a new dose</h1>

<%= simple_form_for [cocktail, dose] do |f| %>
  <%= f.association :ingredient, class: "select2", input_html: { class: "beautiful-dropdown" }, include_hidden: false, collection: Ingredient.order('name ASC')%>
  <%= f.input :description %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
  